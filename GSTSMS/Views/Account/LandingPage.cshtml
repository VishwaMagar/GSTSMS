        <script>
            let selectedPlan = {};

            $(document).ready(function () {
                loadPlans();
            });

            function loadPlans() {
                $.ajax({
                    url: '/SuperAdmin/GetPlansAndFeatures',
                    method: 'GET',
                    success: function (plans) {
                        let html = '';
                        plans.forEach(function (plan, index) {
                            let borderClass = getBorderClass(index);

                            html += `
                                    <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="${(index + 1) * 100}">
                                        <div class="card h-100 d-flex flex-column justify-content-between shadow pricing-card ${borderClass}">
                                            <div class="card-body d-flex flex-column text-center">
                                                <h5 class="card-title mb-1">${plan.PlanName}</h5>
                                                <p class="text-muted small">${plan.NoOfMember}+ Members</p>
                                                <hr class="my-3">
                                                <ul class="list-unstyled text-start flex-grow-1 feature-list mb-4">
                                `;

                            plan.Features.forEach(feature => {
                                html += `<li class="mb-2 d-flex align-items-start"><i class="bi bi-check-circle-fill me-2 text-success"></i>${feature}</li>`;
                            });

                            html += `
                                            </ul>
                                            <p class="fw-bold text-muted mt-auto">Price: ₹${plan.Amount} / ${plan.Duration}</p>
                                        </div>
                                        <div class="card-footer bg-transparent border-0 text-center">
                                            <button class="btn btn-gradient w-100 rounded-pill" onclick="showSignupForm('${plan.PlanName}', ${plan.Amount}, '${plan.Duration}')">
                                                SUBSCRIBE
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            `;
                        });

                        $('#plansContainer').html(html);
                    },
                    error: function () {
                        alert('❌ Failed to load plans. Try refreshing.');
                    }
                });
            }

            function getBorderClass(index) {
                const classes = ['border-start border-4 border-primary', 'border-4 border-info', 'border-4 border-success', 'border-4 border-dark'];
                return classes[index % classes.length];
            }

            function showSignupForm(planName, amount, duration) {
                selectedPlan = {
                    name: planName,
                    amount: amount,
                    duration: duration,
                    startDate: new Date().toLocaleDateString('en-GB'),
                    endDate: calculateEndDate(duration)
                };
                $('#emailVerifyModal').modal('show');
            }

            function calculateEndDate(duration) {
                let end = new Date();
                if (duration.includes("Month")) {
                    let months = parseInt(duration);
                    end.setMonth(end.getMonth() + months);
                } else if (duration.includes("Year")) {
                    let years = parseInt(duration);
                    end.setFullYear(end.getFullYear() + years);
                }
                return end.toLocaleDateString('en-GB');
            }

            function verifyEmailForSubscription() {
                let email = $('#verifyEmailInput').val().trim();

                if (email === '') {
                    alert("⚠️ Please enter your email.");
                    return;
                }

                $.post('/SuperAdmin/CheckActiveSubscription', { email: email }, function (res) {

                    if (res.success) {
                        Swal.fire({
                            icon: 'info',
                            title: 'You already have an active subscription!',
                            html: `<b>Plan:</b> ${res.plan}<br>
                               <b>Start:</b> ${res.start}<br>
                               <b>Expires on:</b> ${res.expiry}`,
                            confirmButtonText: 'OK',
                            confirmButtonColor: '#5D3FD3'
                        });
                    } else {
                        // Proceed to OTP
                        sendOtpForEmail(email);
                    }
                });
            }

            function sendOtpForEmail(email) {
                $('#sendOtpBtn').attr('disabled', true);
                $('#sendOtpText').text("Sending...");
                $('#sendOtpSpinner').removeClass('d-none');

                $.ajax({
                    url: '/SuperAdmin/SendOtpIfEnquiryExists',
                    method: 'POST',
                    data: { email: email },
                    success: function (res) {
                        $('#sendOtpBtn').attr('disabled', false);
                        $('#sendOtpText').text("Continue");
                        $('#sendOtpSpinner').addClass('d-none');

                        if (res.success) {
                            sessionStorage.setItem("verifiedEmail", email);
                            $('#emailVerifyModal').modal('hide');
                            $('#otpVerifyModal').modal('show');
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: '🚫 Subscription Blocked',
                                text: res.message,
                                confirmButtonColor: '#5D3FD3'
                            });
                        }
                    },
                    error: function () {
                        $('#sendOtpBtn').attr('disabled', false);
                        $('#sendOtpText').text("Continue");
                        $('#sendOtpSpinner').addClass('d-none');

                        Swal.fire({
                            icon: 'error',
                            title: 'Server Error',
                            text: 'Something went wrong while sending the OTP.',
                            confirmButtonColor: '#5D3FD3'
                        });
                    }
                });
            }

            function verifyEnteredOtp() {
                let otp = $('#otpInput').val().trim();

                if (otp === '') {
                    alert("⚠️ Please enter the OTP.");
                    return;
                }

                $.ajax({
                    url: '/SuperAdmin/VerifyOtp',
                    method: 'POST',
                    data: { enteredOtp: otp },
                    success: function (res) {
                        if (res.success) {
                            alert("✅ OTP verified. Proceeding to payment.");
                            $('#otpVerifyModal').modal('hide');
                            triggerRazorpayFromVerifiedFlow();
                        } else {
                            alert("❌ Incorrect OTP. Please try again.");
                        }
                    },
                    error: function () {
                        alert("❌ Something went wrong during OTP verification.");
                    }
                });
            }

            function triggerRazorpayFromVerifiedFlow() {
                $.ajax({
                    url: '/SuperAdmin/CreateOrder',
                    method: 'POST',
                    data: {
                        planName: selectedPlan.name,
                        amount: selectedPlan.amount
                    },
                    success: function (response) {
                        if (response.success) {
                            var options = {
                                key: response.razorpayKey,
                                amount: selectedPlan.amount * 100,
                                currency: "INR",
                                name: "Housing Society System",
                                description: `${selectedPlan.name} - ${selectedPlan.duration}`,
                                order_id: response.orderId,
                                handler: function (paymentInfo) {
                                    handlePaymentSuccess(
                                        paymentInfo.razorpay_payment_id,
                                        selectedPlan.name,
                                        selectedPlan.amount,
                                        selectedPlan.duration,
                                        selectedPlan.startDate,
                                        selectedPlan.endDate
                                    );
                                },
                                theme: {
                                    color: "#5D3FD3"
                                }
                            };
                            var rzp = new Razorpay(options);
                            rzp.open();
                        } else {
                            alert("❌ Razorpay order creation failed.");
                        }
                    },
                    error: function () {
                        alert("❌ Error connecting to Razorpay.");
                    }
                });
            }
            function convertToDate(ddmmyyyy) {
                const [day, month, year] = ddmmyyyy.split('/');
                return `${year}-${month}-${day}`;
            }

            function launchConfetti() {
                const durationMs = 3 * 1000;
                const animationEnd = Date.now() + durationMs;
                const defaults = {
                    spread: 60,
                    ticks: 70,
                    gravity: 0.6,
                    origin: { y: 0.7 },
                    colors: ['#5D3FD3', '#FF9F45', '#00D2FF', '#FC6076']
                };

                const interval = setInterval(() => {
                    const timeLeft = animationEnd - Date.now();
                    if (timeLeft <= 0) clearInterval(interval);

                    confetti({
                        ...defaults,
                        particleCount: 50,
                        scalar: Math.random() * 0.6 + 0.7,
                        origin: {
                            x: Math.random(),
                            y: Math.random() - 0.2
                        }
                    });
                }, 250);
            }

            function handlePaymentSuccess(paymentId, planName, amount, duration, startDate, endDate) {
                // Show modal
                document.getElementById("planNameSpan").innerText = planName;
                document.getElementById("amountSpan").innerText = amount;
                document.getElementById("durationSpan").innerText = duration;
                document.getElementById("startDateSpan").innerText = startDate;
                document.getElementById("expiryDateSpan").innerText = endDate;
                document.getElementById("paymentIdSpan").innerText = paymentId;

                const modal = new bootstrap.Modal(document.getElementById('paymentSuccessModal'));
                modal.show();

                // 🎉 Confetti
                launchConfetti();

                // Save to DB
                $.ajax({
                    url: '/SuperAdmin/SaveSubscriptionAfterPayment',
                    method: 'POST',
                    data: {
                        planName: planName,
                        startDate: convertToDate(startDate),
                        expiryDate: convertToDate(endDate),
                        chairmanEmail: sessionStorage.getItem("verifiedEmail")
                    },
                    success: function (res) {
                        if (res.success) {
                            console.log("✅ Subscription saved.");

                            // ✅ Send receipt email only if DB save was successful
                            $.ajax({
                                url: '/SuperAdmin/SendSubscriptionReceipt',
                                method: 'POST',
                                data: {
                                    email: sessionStorage.getItem("verifiedEmail"),
                                    planName: planName,
                                    amount: amount,
                                    duration: duration,
                                    startDate: convertToDate(startDate),
                                    expiryDate: convertToDate(endDate),
                                    paymentId: paymentId
                                },
                                success: function (res) {
                                    if (res.success) {
                                        console.log("📧 Receipt email sent.");
                                    } else {
                                        console.warn("❌ Email failed: " + res.message);
                                    }
                                },
                                error: function () {
                                    console.error("❌ Failed to send receipt email.");
                                }
                            });

                        } else {
                            alert("⚠️ Payment was successful, but subscription wasn't saved: " + res.message);
                        }
                    },
                    error: function () {
                        alert("❌ Payment done but failed to save subscription in database.");
                    }
                });
            }


