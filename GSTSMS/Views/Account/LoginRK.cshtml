@model GSTSMSLibrary.Account.Account
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - Housing Society</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <!--link for External CSS file-->
    <link rel="stylesheet" href="~/Content/css/custom.css" />
</head>
<body>

    <!-- 🔥 Animated housing society background -->
    <img src="~/Content/img/Backgroundimg/Mateo-Cities-gif.gif" class="background-video" alt="Housing Society" />

    <div class="login-container">
        <h2>Login</h2>

        @using (Html.BeginForm("LoginRK", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn-primary" id="loginBtn">
                    <i class="fas fa-sign-in-alt"></i> <span id="loginText">Login</span>
                    <span id="spinner" style="display:none;"><i class="fa fa-spinner fa-spin"></i></span>
                </button>
            </div>
        }

        @if (ViewBag.Message != null)
        {
            <div style="text-align:center; margin-top:10px;" class="text-danger">
                <i class="fa fa-exclamation-triangle"></i> @ViewBag.Message
            </div>
        }

        <div class="forgot-password">
            <a href="@Url.Action("RequestOtpRK", "Account")">Forgot Password?</a>
        </div>
    </div>

    <script>
        document.querySelector("form").addEventListener("submit", function () {
            document.getElementById("loginBtn").disabled = true;
            document.getElementById("loginText").style.display = "none";
            document.getElementById("spinner").style.display = "inline-block";
        });
    </script>

</body>
</html>
