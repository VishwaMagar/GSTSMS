@model GSTSMSLibrary.AccountManager.AccountManager

@using (Html.BeginForm("UpdateActualCost", "AccountManager", FormMethod.Post, new { @class = "modalcontaint" }))
{
    <style>
        .modalcontaint {
            background-color: white;
            height: 560px;
        }
    </style>
    <div class="container p-4">
        <h4 class="text-center mb-4 fw-bold">Update Details</h4>
        <button type="button" class="btn btn-outline-danger btn-sm position-absolute" style="top: 10px; right: 10px;" onclick="closeModal()">
            <i class="fa fa-times"></i>
        </button>

        @Html.HiddenFor(model => model.EventCode)

        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Event Name :</label>
                <input type="text" class="form-control" value="@Model.EventName" readonly />
            </div>
            <div class="col-md-6 mb-3">
                <label>Bank Account :</label>
                <input type="text" class="form-control" value="@Model.BankAccount" readonly />
            </div>
            <div class="col-md-6 mb-3">
                <label>Event Handler :</label>
                <input type="text" class="form-control" value="@Model.EventHandlerName" readonly />
            </div>
            <div class="col-md-6 mb-3">
                <label>IFSC Code :</label>
                <input type="text" class="form-control" value="@Model.IFSCCode" readonly />
            </div>
            <div class="col-md-6 mb-3">
                <label>Phone No. :</label>
                <input type="text" class="form-control" value="@Model.PhoneNumber" readonly />
            </div>
            <div class="col-md-6 mb-3">
                <label>Allocated Budget :</label>
                <input type="text" class="form-control"
                       value="@(Model.AllocatedBudget.HasValue ? "₹" + Model.AllocatedBudget.Value.ToString("N0") : "₹0")" readonly />
            </div>
            <div class="col-md-6 mb-3">
                <label>Date :</label>
                <input type="text" class="form-control"
                       value="@(Model.CreatedDate.HasValue ? Model.CreatedDate.Value.ToString("dd-MM-yyyy") : "-")" readonly />
            </div>
            <div class="col-md-6 mb-3">
                <label>Actual Cost :</label>
                @Html.TextBoxFor(model => model.ActualCost, new { @class = "form-control", @type = "text", placeholder = "Enter Actual Cost" })
            </div>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary me-2">Update</button>
            <button type="reset" class="btn btn-danger">Clear</button>
        </div>
    </div>


    <!-- ✅ Close Modal Script -->
    <script>
        function closeModal() {
            $("#updateModal").modal("hide");
        }
    </script>
}