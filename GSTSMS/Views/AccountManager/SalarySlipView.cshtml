@*/// ===============================================
    /// Salary Slip View for Sai Amber Society
    /// Model: Dictionary<string, string>
        /// Purpose: Render salary receipt as HTML/PDF
        /// Used after salary transaction is processed
        /// ===============================================*@

@model Dictionary<string, string>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Salary Slip</title>

    <style>
        /* /// --------------------------
            /// General Page Styling
            /// --------------------------
            /// - Clean font, 14px size
            /// - Centered receipt box with padding*/
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 14px;
            line-height: 1.7;
            background: white;
            padding: 30px;
        }

        /*  /// --------------------------
            /// Receipt Container Styling
            /// --------------------------
            /// - Fixed width
            /// - Centered
            /// - Flex-based label/value layout*/
        #receiptContent {
            border: 1px solid #ccc;
            width: 600px;
            margin: 0 auto;
        }

            #receiptContent p {
                display: flex;
                justify-content: space-between;
                margin: 6px 0;
            }

                #receiptContent p strong {
                    width: 180px;
                    color: #333;
                }

        /*   /// --------------------------
            /// Footer Signature Styling
            /// --------------------------*/
        .footer-sign {
            margin-top: 40px;
            text-align: right;
            font-weight: bold;
            color: #157347;
        }

        /* /// Horizontal Rule Styling*/
        hr {
            margin: 15px 0;
            border-top: 1px solid #ccc;
        }
    </style>
</head>
<body>
    <div id="receiptContent">
        @*/// --------------------------
            /// Header Section
            /// --------------------------*@
        <h4 style="text-align:center; margin-bottom:5px;">Sai Amber Society</h4>
        <h5 style="text-align:center; margin-bottom:20px;">Salary Payment Receipt</h5>

        @*/// --------------------------
            /// Worker & Transaction Details
            /// --------------------------*@
        <p><strong>Employee Name:</strong> @Model["WorkerName"]</p>
        <p><strong>Contact Number:</strong> @Model["Contact"]</p>
        <p><strong>Role:</strong> @Model["Role"]</p>
        <p><strong>Joining Date:</strong> @Convert.ToDateTime(Model["Date"]).ToString("dd MMM yyyy")</p>

        @*/// --------------------------
            /// Attendance & Salary Info
            /// --------------------------*@
        <p><strong>Attendance Month:</strong> @Model["AttendanceMonth"]</p>
        <p><strong>Days Present:</strong> @Model["DaysPresent"]</p>
        <p><strong>Base Salary:</strong> ₹@Model["BaseSalary"]</p>
        <p><strong>Per Day Salary:</strong> ₹@((Convert.ToDecimal(Model["BaseSalary"]) / 30).ToString("0.00"))</p>
        <p><strong>Total Amount Paid:</strong> ₹@Model["TotalAmount"]</p>

        @*/// --------------------------
            /// Payment Mode & Bank Details
            /// --------------------------*@
        <p><strong>Payment Mode:</strong> @Model["PaymentModeName"]</p>
        <p><strong>Transaction Ref:</strong> @Model["TransactionRef"]</p>
        <p><strong>IFSC Code:</strong> @Model["IFSC Code"]</p>
        <p><strong>UPI ID:</strong> @Model["Worker UPI"]</p>

        <hr />
        <p><strong>Receipt Generated On:</strong> @DateTime.Now.ToString("dd MMM yyyy hh:mm tt")</p>

        @*/// --------------------------
            /// Footer: Authorized Signature
            /// --------------------------*@
        <div class="footer-sign">
            Authorized By: Accountant Meena Bhaskar Deshmukh
        </div>
    </div>
</body>
</html>