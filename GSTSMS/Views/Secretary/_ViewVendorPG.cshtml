@model GSTSMSLibrary.Secretary.Secretary
<link rel="stylesheet" href="~/Content/css/custom.css" />

<div class="d-flex justify-content-end">
    <button type="button"
            class="btn-close data-bs-dismiss=" alert" btn-danger rounded-circle position-absolute top-0 end-0 m-2"
            id="studentdetailspopup"
            data-dismiss="modal"
            aria-label="Close"
            style="border: none; font-size: 1.5rem;">
        &times;
    </button>
</div>

   
   

    <div class="d-flex justify-content-center">
        <div class="vendor-detail-card p-4" style="max-width: 700px; width: 100%;">
            <div class="vendor-detail-header text-center">
                <h4>Vendor Details</h4>
            </div>

           <div class="card-body p-0">
               

                <div class="detail-row d-flex">
                    <div class="col-sm-4 detail-label">Vendor Name:</div>
                    <div class="col-sm-8 detail-value">@Html.DisplayFor(model => model.VendorName)</div>
                </div>

                <div class="detail-row d-flex">
                    <div class="col-sm-4 detail-label">Service Provided:</div>
                    <div class="col-sm-8 detail-value">@Html.DisplayFor(model => model.ServiceProvide)</div>
                </div>

                <div class="detail-row d-flex">
                    <div class="col-sm-4 detail-label">Email:</div>
                    <div class="col-sm-8 detail-value">
                        <a>
                            @Html.DisplayFor(model => model.Email)"

                        </a>
                    </div>
                </div>

                <div class="detail-row d-flex">
                    <div class="col-sm-4 detail-label">Phone Number:</div>
                    <div class="col-sm-8 detail-value">
                        <a href="tel:@Html.DisplayFor(model => model.PhoneNumber)" style="color: #4a00e0; text-decoration: none;">
                            <i class="fas fa-phone mr-1"></i>@Html.DisplayFor(model => model.PhoneNumber)
                        </a>
                    </div>
                </div>

                <div class="detail-row d-flex">
                    <div class="col-sm-4 detail-label">Address:</div>
                    <div class="col-sm-8 detail-value">
                        <i class="fas fa-map-marker-alt mr-1" style="color: #8e2de2;"></i>
                        @Html.DisplayFor(model => model.Address)
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Location))
                {
                    <div class="detail-row d-flex">
                        <div class="col-sm-4 detail-label">Location:</div>
                        <div class="col-sm-8 location-highlight">
                            <i class="fas fa-location-arrow mr-1"></i>@Html.DisplayFor(model => model.Location)
                        </div>
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.Location))
            {
                <div class="mt-4">
                    <div class="text-center mb-3">
                        <h5 style="color: #4a00e0;">
                            <i class="fas fa-map-marked-alt mr-2"></i>Location Map
                        </h5>
                    </div>
                    <div class="map-container">
                        <iframe width="600"
                                height="300"
                                frameborder="0"
                                style="border:0"
                                allowfullscreen
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"
                                src="https://www.google.com/maps?q=@Model.Location&output=embed">
                        </iframe>
                    </div>
                </div>
            }
        </div>
    </div>

